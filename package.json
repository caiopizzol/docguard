{
  "name": "docguard-monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "DocGuard - Documentation regression detection tool",
  "scripts": {
    "build": "pnpm run --recursive build",
    "test": "pnpm -r run test",
    "dev": "pnpm run build && pnpm run dev:cli",
    "dev:cli": "node packages/cli/dist/index.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "pnpm build && pnpm -r run type-check",
    "check:all": "pnpm run build && pnpm run format && pnpm run lint && pnpm run type-check"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.42.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "author": "caiopizzol",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/caiopizzol/docguard.git"
  }
}
